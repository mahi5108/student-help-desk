<!DOCTYPE html>
<html>
  <head>
    <title>Card Example</title>
    <style>
      .card {
        width: 300px;
        background-color: #2f3e46;
        box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        padding: 20px;
        display: inline-block;
      }
      .card h3 {
        font-size: 24px;
        font-weight: bold;
        margin-top: 0;
        color: white;
      }
      .card-info {
        font-size: 16px;
        color: white;
        margin-top: 10px;
        font-style: italic;
      }
      .card-info span {
        font-weight: bold;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h3>Transcript</h3>
      <div class="card-info">
        <span>Roll No:</span><%- request.rollno %><br />
        <span>Issue:</span><%- request.issue %><br />
        <span>Email:</span><%- request.email %><br />
        <span>Date:</span><%- request.date %>
      </div>
    </div>
    <script>
      const card = document.querySelector(".card");
      const cardInfo = document.querySelector(".card-info");

      card.addEventListener("click", () => {
        card.classList.toggle("card-expanded");
        cardInfo.classList.toggle("card-info-expanded");
      });
    </script>
  </body>
</html>
